<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".database.firebase.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/Theme.PharmaShare"
        tools:targetApi="31">
        <activity
            android:name=".app.activities.AddPharmacy"
            android:exported="false" />
        <activity
            android:name=".app.activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".app.activities.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".app.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".app.activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>